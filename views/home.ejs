<!doctype html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
       <%- include('./partials/nav') %>

    <div class="container mt-4">
      <div class="row gap-3">

     
     <% blogs.forEach(blog => { %>
      <div class="card mb-3 p-0" style="width: 18rem;">      
          
            <img src="<%= blog.coverImageURL %>" class="img-fluid" >
                 
            <div class="card-body">
              <h5 class="card-title h-50"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          
        
      </div>
     <% }) %>
    </div>
       </div>
     
    <%- include('./partials/scripts') %>

  </body>
</html>